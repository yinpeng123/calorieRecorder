/**app.wxss**/

page {
  background: #faf4de;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  padding: 0 35rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 1.5;
  box-sizing: border-box;
} 

.container>view{
  width: 100%;
  box-sizing: border-box;
}

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}

.img-icon {
  vertical-align: middle;
}

.text-comment{
  color:#bfbfbf;
  font-size: 0.8em;
}

.text-minor{
  font-size: 0.8em;
  color: #666;
}

.text-prompt {
  font-weight: bold;
  color: #FF9933;
}

.text-waring {
  color: #FF6666;
}

.text-title {
  font-weight: bold;
  color: #521a01;
}

.text-low {
  color: #009933;
}

.text-bold{
  font-weight: bold;
}

.grey-border-bottom{
  border-bottom: 1px solid #f0f0f0;
}

