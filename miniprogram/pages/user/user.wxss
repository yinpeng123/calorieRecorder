/* miniprogram/pages/user/user.wxss */

.background {
  width: 100%;
  position: absolute;
  z-index: 0;
  background: url('https://6361-calorie-um1jm-1300723881.tcb.qcloud.la/yellow.jpg?sign=59a9c09d6ea6472dcb9900985e23cd4c&t=1574789877') no-repeat top / 100%;
}

.background-img {
  width: 100%;
  height: 400rpx;
  background: linear-gradient(to bottom, transparent, #f6f6f6);
}

.container {
  z-index: 1;
}

.userinfo {
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: center no-repeat / cover;
}

.nickName {
  width: 200rpx;
  font-size: 36rpx;
  text-align: center;
}

.view-history {
  position: absolute;
  top: 100rpx;
  right: 60rpx;
  width: 250rpx !important;
  height: 60rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  box-shadow: 3rpx 3rpx 30rpx 2rpx #e8e8e8;
}

.options {
  display: flex;
  background: #fff;
  border-radius: 10rpx;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.options>view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  padding: 0 20rpx;
  border-top: 1px solid #f2f2f2;
  box-sizing: border-box;
}

.option>view:first-of-type {
  border-top: none;
}

.okbutton {
  background: linear-gradient(to right, #fe0, #fa0);
  border-radius: 50rpx;
  width: 100%;
  color: white;
  font-weight: 500;
}

.sex-seletor {
  border-radius: 10rpx;
  padding: 10rpx;
  margin-left: 20rpx;
}

.sex-seletor.checked {
  background: #ffd900;
}

.exercise-picker {
  /* width:320rpx; */
  text-align: right;
}

.weight input, .height input, .body-fat input {
  width: 70rpx;
}

.weight>view, .height>view, .body-fat view {
  display: flex;
}
